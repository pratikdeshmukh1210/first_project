#include<iostream>
using namespace std;
class person {
char name[30];
//
int age ;
public :
  void getdata (void);
  void display (void);
  };
  void person ::  getdata(void){
  
  cout << "enter the name ";
  cin >>name ;
  cout <<"enter the age ";
  cin >>age ;}
void person ::  display(void)
{
cout<<"\nenter name "<<name ;
cout <<"\nenter age "<<age ;}
int main()
{
    person p1;
    p1.getdata();
    p1.display();
    return 0;
}